<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.drinktype.EditDrinkTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_edit_drink_type"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/edit_drinktype_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drinktype_name" />


            <EditText
                android:id="@+id/edit_drinktype_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_drinktypename"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/drinktypePercentageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Percentage" />

            <EditText
                android:id="@+id/edit_drinktype_percentage_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_drinktype_percentage"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/drinktypeTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/type" />

            <EditText
                android:id="@+id/edit_drinktype_type_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_type"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/drinktypeSubtypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtype" />

            <EditText
                android:id="@+id/edit_drinktype_subtype_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_subtype"
                android:inputType="textCapWords" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cancel_drinktype"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/button_edit_drinktype"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save changes" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>