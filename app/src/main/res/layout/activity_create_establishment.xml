<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.establishment.CreateEstablishmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_create_establishment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_create_establishment"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/create_est_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/establishment_name" />

            <EditText
                android:id="@+id/create_est_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_establishment_name"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/estAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address" />

            <EditText
                android:id="@+id/create_est_address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_enter_address"
                android:inputType="textPostalAddress" />

            <TextView
                android:id="@+id/estTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/type" />

            <EditText
                android:id="@+id/create_est_type_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_type"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/estLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location" />

            <Spinner
                android:id="@+id/create_est_location_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/location_array"
                android:padding="16dp" />

            <TextView
                android:id="@+id/estOpeningHoursTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/opening_hours" />

            <EditText
                android:id="@+id/create_est_opening_hours_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_opening_hours"
                android:inputType="textCapWords" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/cancel_est_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel" />
                <Button
                    android:id="@+id/create_est_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/create_establishment" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>